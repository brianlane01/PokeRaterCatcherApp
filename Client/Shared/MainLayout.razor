@inherits LayoutComponentBase
@using MudBlazor
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Style="@($"color:{Theme.Palette.SuccessLighten}; background:{Theme.Palette.Dark};")">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        My Application
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Class="pa-4" Style="@($"color:{Colors.Purple.Darken4}; background:{Theme.Palette.Dark}; background:{Theme.Palette.Dark};")">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    private MudTheme Theme = new MudTheme();
}
